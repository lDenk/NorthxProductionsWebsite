@{
    ViewBag.Title = "Home Page";
}
@using northxproductions.Models;
@model NxVideo


<table align="center">
    <tr>
        <td>
            @using (Html.BeginForm("GetPrev", "Home"))
            {
                <input type="hidden" name="Id" value="@Model.Id" />
                <input id="prev" type="image" class="my-scroll-btn" src="http://i.imgur.com/vbQhi2k.png" width="30" height="30"/>
            }
        </td>
        <td class="my-video-container">
            <iframe width="640" height="360"
                    src="@Model.Embed"
                    frameborder="0"
                    allowfullscreen></iframe>
        </td>
        <td>
            @using (Html.BeginForm("GetNext", "Home"))
            {
                <input type="hidden" name="Id" value="@Model.Id" />
                <input id="next" type="image" class="my-scroll-btn" src="http://i.imgur.com/efHTc7s.png" width="30" height="30"/>
            }
        </td>
    </tr>
</table>