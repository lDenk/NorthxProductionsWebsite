<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Northx Productions</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="my-nav-bar">
        <table class="my-nav-bar-table">
            <tr>
                <td class="my-nav-bar-item-large" colspan="4">
                    <a href='@Url.Action("Index", "Home")'>
                        <img src="~/Content/Images/NorthxLogoNavBar.png" width="155" />
                    </a>
                </td>
            </tr>
            <tr>
                <td class="my-nav-bar-item-small">
                    @Html.ActionLink("Videos", "Index", "Videos")
                </td>
                <td class="my-nav-bar-item-small">
                    @Html.ActionLink("Music", "Music", "Home")
                </td>
                <td class="my-nav-bar-item-small">
                    @Html.ActionLink("News Feed", "NewsFeed", "Home")
                </td>
                <td class="my-nav-bar-item-small">
                    @Html.ActionLink("Contact", "Contact", "Home")
                </td>
                <td class="my-nav-bar-item-small">
                    @Html.ActionLink("Store", "StoreIndex", "Store")
                </td>
                <td>
                    @if (null != Session["UserIsAdmin"] && Session["UserIsAdmin"].Equals("Admin"))
                    {
                        @Html.ActionLink("Admin", "AdminControls", "Admin")
                    }
                </td>
            </tr>
        </table>
    </div>

    <img class="background-image" src="~/Content/Images/NorthxLogoLarge.png" />
    <div class="content">
        <div class="body-content">
            @RenderBody()
        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Northx Productions</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
